            var seguiIdMemoria = @Html.Raw(Json.Serialize(@Model.Id));

            $('[data-toggle="tooltip"]').tooltip();

            $(".btn-regresar").click(function () {
                window.location.href = "/proyectos/index" + window.location.search;
            });

